@model IEnumerable<application.Models.OgrenciDers>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a href="@Url.Action("OgrenciDersAdd","Home")" class="btn px-15 btn-primary">
    <i class="las la-plus fs-16"></i>Yeni Ders Atama
</a>
<div class="panel panel-default">
    <div class="panel-heading">
        Advanced Tables
    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover"
                   id="dataTables-example">
                <thead>
                    <tr class="userDatatable-header">
                        <th>
                            <span class="userDatatable-title">Id</span>
                        </th>
                        <th>
                            <span class="userDatatable-title float-right">Ders Adı</span>
                        </th>
                        <th>
                            <span class="userDatatable-title float-right">Öğrenci</span>
                        </th>
                        <th>
                            <span class="userDatatable-title float-right">Action</span>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() > 0)
                    {
                        foreach (var ogrenciDers in Model)
                        {
                            <tr>
                                <td>
                                    <div class="userDatatable-content" style="align-items:center">
                                        @ogrenciDers.OgrenciDersId
                                    </div>
                                </td>
                                <td>
                                    <div class="userDatatable-content">
                                        @ogrenciDers.Ders.DersAdi
                                    </div>
                                </td>
                                <td>
                                    <div class="userDatatable-content">
                                        @ogrenciDers.Ogrenci.AdSoyad
                                    </div>
                                </td>
                                <td>
                                    <ul class="orderDatatable_actions mb-0 d-flex flex-wrap">
                                        <li>
                                            <a href="@Url.Action("OgrenciDersEdit","Home", new {  id=ogrenciDers.OgrenciDersId  })" class="edit">
                                                Güncelle
                                            </a>
                                        </li>
                                        &nbsp;
                                        &nbsp;
                                        <li>
                                            <a href="@Url.Action("OgrenciDersRemove","Home", new {  id=ogrenciDers.OgrenciDersId  })" class="remove">
                                                Sil
                                            </a>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3">&nbsp;</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
</div>

