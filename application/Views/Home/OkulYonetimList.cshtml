@model IEnumerable<application.Models.OkulYonetim>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a href="@Url.Action("OkulYonetimAdd","Home")" class="btn px-15 btn-primary">
    <i class="las la-plus fs-16"></i>Yeni Personel Ekle
</a>
<div class="panel panel-default">
    <div class="panel-heading">
        Advanced Tables
    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover"
                   id="dataTables-example">
                <thead>
                    <tr class="userDatatable-header">
                        <th>
                            <span class="userDatatable-title">PersonelId</span>
                        </th>
                        <th>
                            <span class="userDatatable-title float-right">Adı Soyadı</span>
                        </th>
                        <th>
                            <span class="userDatatable-title float-right">Görevi</span>
                        </th>
                        <th>
                            <span class="userDatatable-title float-right">Yönetim Tipi</span>
                        </th>
                        <th>
                            <span class="userDatatable-title float-right">Action</span>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() > 0)
                    {
                        foreach (var personel in Model)
                        {
                            <tr>
                                <td>
                                    <div class="userDatatable-content" style="align-items:center">
                                        @personel.OkulYonetimId
                                    </div>
                                </td>
                                <td>
                                    <div class="userDatatable-content">
                                        @personel.AdSoyad
                                    </div>
                                </td>
                                <td>
                                    <div class="userDatatable-content">
                                        @personel.Gorevi
                                    </div>
                                </td>
                                <td>
                                    <div class="userDatatable-content">
                                        @personel.YonetimTip
                                    </div>
                                </td>
                                <td>
                                    <ul class="orderDatatable_actions mb-0 d-flex flex-wrap">
                                        <li>
                                            <a href="@Url.Action("OkulYonetimEdit","Home", new {  id=personel.OkulYonetimId  })" class="edit">
                                                Güncelle
                                            </a>
                                        </li>
                                        &nbsp;
                                        &nbsp;
                                        <li>
                                            <a href="@Url.Action("OkulYonetimRemove","Home", new {  id=personel.OkulYonetimId  })" class="remove">
                                                Sil
                                            </a>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3">&nbsp;</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
</div>
