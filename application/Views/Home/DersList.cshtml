@model IEnumerable<application.Models.Ders>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <a href="@Url.Action("DersAdd","Home")" class="btn px-15 btn-primary">
        <i class="las la-plus fs-16"></i>Yeni Ders Ekle
    </a>
    <div class="panel panel-default">
        <div class="panel-heading">
            Advanced Tables
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover"
                       id="dataTables-example">
                    <thead>
                        <tr class="userDatatable-header">
                            <th>
                                <span class="userDatatable-title">DersId</span>
                            </th>
                            <th>
                                <span class="userDatatable-title float-right">DersAdi</span>
                            </th>
                            <th>
                                <span class="userDatatable-title float-right">Kredisi</span>
                            </th>
                            <th>
                                <span class="userDatatable-title float-right">Öğretmeni</span>
                            </th>
                            <th>
                                <span class="userDatatable-title float-right">Action</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() > 0)
                        {
                            foreach (var ders in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="userDatatable-content" style="align-items:center">
                                            @ders.DersId
                                        </div>
                                    </td>
                                    <td>
                                        <div class="userDatatable-content">
                                            @ders.DersAdi
                                        </div>
                                    </td>
                                    <td>
                                        <div class="userDatatable-content">
                                            @ders.Kredisi
                                        </div>
                                    </td>
                                    <td>
                                        <div class="userDatatable-content">
                                            @ders.OkulYonetim.AdSoyad
                                        </div>
                                    </td>
                                    <td>
                                        <ul class="orderDatatable_actions mb-0 d-flex flex-wrap">
                                            <li>
                                                <a href="@Url.Action("DersEdit","Home", new {  id=ders.DersId  })" class="edit">
                                                    Güncelle
                                                </a>
                                            </li>
                                            &nbsp;
                                            &nbsp;
                                            <li>
                                                <a href="@Url.Action("DersRemove","Home", new {  id=ders.DersId  })" class="remove">
                                                    Sil
                                                </a>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3">&nbsp;</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    </div>
